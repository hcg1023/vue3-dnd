{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
	"baseUrl": "./",
	"outDir": "./dist/types",
	"declarationDir": "./dist/types",
	"rootDir": "./src",
	"skipLibCheck": true,
	"declaration": true,
	"emitDeclarationOnly": true
  },
  "include": [
	"./src/index.ts",
	"./**/*.ts",
	"./**/*.d.ts",
	"./**/*.tsx"
  ],
  "exclude": [
	"node_modules/**",
	"scripts/**"
  ]
}
