{
  "name": "root",
  "version": "0.0.0",
  "description": "Drag and Drop for Vue3",
  "scripts": {
	"test": "vitest --run",
	"lint": "eslint packages --ext .js,.ts,.vue --fix",
	"prettier": "prettier --write packages/**/*.{js,ts,vue}",
	"prepare": "husky install",
	"lint-staged": "lint-staged",
	"version": "changeset version",
	"prepublishOnly": "pnpm run version",
